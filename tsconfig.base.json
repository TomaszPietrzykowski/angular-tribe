{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-tribe/feature-article": [
        "libs/articles/feature-article/src/index.ts"
      ],
      "@angular-tribe/feature-articles-list": [
        "libs/articles/feature-articles-list/src/index.ts"
      ],
      "@angular-tribe/ui-layout": ["libs/ui-layout/src/index.ts"],
      "@angular-tribe/workspace-plugin": ["tools/workspace-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
